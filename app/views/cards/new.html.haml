.header_index
  = render partial: 'items/header_index' 
  
.container
  .content__title
    %h2 クレジットカード情報入力
  .content__credit-card
    .content__credit-card__inner
      = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
        %label :カード番号
        %span 必須
        %br
        = text_field_tag "number", "", class: "input-numbe", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
        .image
          = image_tag(image_path('cards/visa.png'), class: 'visa')
          = image_tag(image_path('cards/master.png'), class: 'master')
          = image_tag(image_path('cards/jcb.png'), class: 'jcb')
          = image_tag(image_path('cards/amex.png'), class: 'amex')
          = image_tag(image_path('cards/diners.png'), class: 'diners')
          = image_tag(image_path('cards/discover.png'), class: 'discover')
        .cards-expire
          %label :有効期限
          %span 必須
          %br
          .cards-expire__wrap
            .cards-expire__wrap--half
              %select#exp_month{name: "exp_month", type: "text", class: 'input-expire'}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span.expire-text 月
              %br
            .cards-expire__wrap--half
              %select#exp_year{name: "exp_year", type: "text", class: "input-expire"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span.expire-text 年
        .cards-expire
          %label :セキュリティコード
          %span 必須
          = text_field_tag "cvc", "", class: "input-number", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
        .content-bottom#card_token
          = submit_tag "登録する", class: 'content-bottom--add-btn', id: 'token_submit'
          
.footer_index
  = render partial: 'items/footer_index' 